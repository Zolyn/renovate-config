{
    "extends": ["config:base"],
    "labels": ["dependencies"],
    "packageRules": [{
        "groupName": "dependencies (non-major)",
        "matchDepTypes": ["dependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true,
        "automergeStrategy": "squash"
    },{
        "groupName": "devDependencies (non-major)",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true,
        "automergeStrategy": "squash"
    }]
}
